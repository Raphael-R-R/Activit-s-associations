{% extends 'v_layout.html.twig' %}
{% block contenu %}
    <form method="post" action="{{ path('loginConfirm') }}">
        <div class="row">
            <fieldset>
                <legend>Connexion</legend>

                <label>
                    Nom d'utilisateur :
                    <input type="text" name="login" />
                </label>
                <label>
                    Mot de passe :
                    <input type="password" name="password" />
                </label>

                {% if error is defined %}
                    <small class="error">{{ error }}</small>
                {% endif %}

                <input type="submit" value="Connexion" />
            </fieldset>
        </div>
    </form>
{% endblock %}